<%- include('partials/header') %>
<main>
  <form method="POST" action="/posts">
    <h2>New Post</h2>
    <label>Author: <input type="text" name="author" required></label>
    <label>Title: <input type="text" name="title" required></label>
    <label>Content: <textarea name="content" required></textarea></label>
    <button type="submit">Post</button>
  </form>
  <section>
    <% posts.forEach(post => { %>
      <article>
        <h3><%= post.title %></h3>
        <p>By <%= post.author %>, <%= post.createdAt %></p>
        <div><%= post.content %></div>
        <a href="/posts/<%= post.id %>/edit">Edit</a>
        <form method="POST" action="/posts/<%= post.id %>/delete" class="inline">
          <button type="submit">Delete</button>
        </form>
      </article>
    <% }); %>
  </section>
</main>

